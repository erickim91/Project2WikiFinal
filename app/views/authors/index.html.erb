<h1>Listing Authors</h1>

<div class="wrapperbox">
<table>
  <thead>
    <tr>
      <th>Name</th>
      <th>Phone</th>
      <th>Email</th>
      <th>Password</th>
      <th>Department</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @authors.each do |author| %>
      <tr>
        <td><%= link_to author.name, author %></td>
        <td><%= author.phone %></td>
        <td><%= author.email %></td>
        <td><%= author.password %></td>
        <td><%= author.department %></td>
      </tr>
    <% end %>
  </tbody>
</table>
</div>
